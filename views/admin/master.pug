extends ../layouts/common.pug
block header
  div(class="container-md")
    h1 Danh sách người dùng
    a(href="master/addUser") Thêm User
    ul(class="list-group")
    each user in dataUsers      
      li(class="list-group-item")
        
        img(src= user.avatar width="64")
        span= user.name
        a.ml-2(class="badge badge-primary" href="master/" + user.id) Thông tin
        span      
        a(class="badge badge-success" href="master/" + user.id + "/edit") Sửa
        span     
        a(class="badge badge-danger" href="master/" + user.id + "/delete") Xóa