extends ../layouts/common.pug
block header
  div(class="container-md")
    
    form(action="/book/search" method="get" )
      div(class="form-group" style="display: flex; margin-top:30px;")
        input(class="form-control" style="width:80%" type="search" name="q" value=queryValue)
        //`${q ? q : ''}`
        button(class="btn btn-info" style="width: 20%; margin: 0 0 0 10px;" type="submit") Tìm kiếm

    a(href="/book/add") Thêm sách mới
    
    ul(class="list-group")
      each value in library
        li(class="list-group-item ")= value.title
          a.ml-2(class="badge badge-primary" href="book/" + value.id) Thông tin
          span      
          a(class="badge badge-success" href="book/" + value.id + "/edit") Sửa
          span     
          a(class="badge badge-danger" href="book/" + value.id + "/delete") Xóa