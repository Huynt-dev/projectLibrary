extends ../layouts/common.pug
block header
  div(class="container-md")
    h1 Thêm sách mới
    form(action="/book/add" method="POST" style="margin-top:20px")
      if error
        each err in error
          .alert.alert-danger= err
      div.form-group
        input(class="form-control" type="text" name="title" placeholder="Tiêu đề" value= values ? values.title : "")
      div.form-group
        input(class="form-control" type="text" name="description" placeholder="nội dung tóm tắt" value= values ? values.description : "")
      button.btn.btn-primary(type="submit") Thêm